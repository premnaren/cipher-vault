        // --- ALGORITHMS & UI HELPERS (Standard) ---
        DOM.key.addEventListener('input', (e) => { const algo = DOM.algo.value; const val = e.target.value; if (algo === 'caesar' || algo === 'rail_fence') e.target.value = val.replace(/[^0-9]/g, ''); else if (algo === 'vigenere' || algo === 'playfair') e.target.value = val.replace(/[^a-zA-Z]/g, ''); });
        
        const Algorithms = {
            caesar: (t, k, m) => { const s = parseInt(k) || 0; const shift = m === 'encrypt' ? s : -s; return t.replace(/[a-zA-Z]/g, c => { const b = c >= 'a' ? 97 : 65; return String.fromCharCode(((c.charCodeAt(0) - b + shift) % 26 + 26) % 26 + b); }); },
            atbash: (t) => { const f = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"; const r = "ZYXWVUTSRQPONMLKJIHGFEDCBA"; return t.toUpperCase().replace(/[A-Z]/g, c => f.indexOf(c) > -1 ? r[f.indexOf(c)] : c); },
            rail_fence: (t, k, m) => { const r = parseInt(k) || 3; if(r < 2) return t; const len = t.length; if(m==='encrypt') { let f = Array.from({length:r},()=>[]); let row=0, d=1; for(let c of t) { f[row].push(c); row+=d; if(row===0||row===r-1) d=-d; } return f.flat().join(''); } else { let f=Array.from({length:r},()=>new Array(len).fill(null)); let row=0, d=1; for(let i=0;i<len;i++){ f[row][i]='?'; row+=d; if(row===0||row===r-1) d=-d; } let idx=0; for(let i=0;i<r;i++) for(let j=0;j<len;j++) if(f[i][j]=='?' && idx<len) f[i][j]=t[idx++]; let res='', r2=0, d2=1; for(let i=0;i<len;i++){ if(f[r2][i]) res+=f[r2][i]; r2+=d2; if(r2===0||r2===r-1) d2=-d2; } return res; } },
            vigenere: (t, k, m) => { const key = k.toUpperCase().replace(/[^A-Z]/g,'') || 'A'; let ki = 0; return t.replace(/[a-zA-Z]/g, c => { const b = c >= 'a' ? 97 : 65; const charCode = c.toUpperCase().charCodeAt(0) - 65; const keyCode = key[ki++ % key.length].charCodeAt(0) - 65; let result = m === 'encrypt' ? (charCode + keyCode) % 26 : (charCode - keyCode + 26) % 26; return String.fromCharCode(result + b); }); },
            playfair: (t, k, m) => { let key = (k||"KEY").toUpperCase().replace(/[^A-Z]/g,"").replace(/J/g,"I"); let matrix=[], seen=new Set(); (key+"ABCDEFGHIKLMNOPQRSTUVWXYZ").split('').forEach(c=>{ if(!seen.has(c)){ seen.add(c); matrix.push(c); }}); let input = t.toUpperCase().replace(/[^A-Z]/g,"").replace(/J/g,"I"); if(m === 'encrypt') { let pairs=[]; for(let i=0;i<input.length;i+=2){ let a=input[i], b=input[i+1]||'X'; if(a===b){ b='X'; i--; } pairs.push([a,b]); } return pairs.map(([a,b])=>{ let i1=matrix.indexOf(a), i2=matrix.indexOf(b); let r1=Math.floor(i1/5), c1=i1%5, r2=Math.floor(i2/5), c2=i2%5; if(r1===r2) return matrix[r1*5+(c1+1)%5] + matrix[r2*5+(c2+1)%5]; if(c1===c2) return matrix[((r1+1)%5)*5+c1] + matrix[((r2+1)%5)*5+c2]; return matrix[r1*5+c2] + matrix[r2*5+c1]; }).join(' '); } else { let res=""; for(let i=0;i<input.length;i+=2){ let a=input[i], b=input[i+1]; if(!b)break; let i1=matrix.indexOf(a), i2=matrix.indexOf(b); let r1=Math.floor(i1/5), c1=i1%5, r2=Math.floor(i2/5), c2=i2%5; if(r1===r2) res+=matrix[r1*5+(c1+4)%5] + matrix[r2*5+(c2+4)%5]; else if(c1===c2) res+=matrix[((r1+4)%5)*5+c1] + matrix[((r2+4)%5)*5+c2]; else res+=matrix[r1*5+c2] + matrix[r2*5+c1]; } return res; } },
            aes: (t, k, m) => { try { return m === 'encrypt' ? CryptoJS.AES.encrypt(t, k).toString() : CryptoJS.AES.decrypt(t, k).toString(CryptoJS.enc.Utf8); } catch(e) { return "INVALID KEY OR DATA"; } },
            rsa: (t, _, m) => { const crypt = new JSEncrypt(); try { let pub = DOM.pub.value, priv = DOM.priv.value; if(pub && !pub.includes('BEGIN')) pub = `\n${pub}\n`; if(priv && !priv.includes('BEGIN')) priv = `\n${priv}\n`; if(m === 'encrypt') { crypt.setPublicKey(pub); return crypt.encrypt(t) || "Fail"; } else { crypt.setPrivateKey(priv); return crypt.decrypt(t) || "Fail"; } } catch(e) { return "RSA KEY ERROR"; } },
            ecc: (t, _, m) => { if(m === 'encrypt') return `[ECC]${btoa(t.split('').reverse().join(''))}`; else { try { return atob(t.replace('[ECC]','')).split('').reverse().join(''); } catch(e) { return "ECC ERROR"; } } },
