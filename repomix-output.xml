        // --- ALGORITHMS & UI HELPERS ---
        if(DOM.key) {
            DOM.key.addEventListener('input', (e) => { const algo = DOM.algo.value; const val = e.target.value; if (algo === 'caesar' || algo === 'rail_fence') e.target.value = val.replace(/[^0-9]/g, ''); else if (algo === 'vigenere' || algo === 'playfair') e.target.value = val.replace(/[^a-zA-Z]/g, ''); });
        }
        
        const Algorithms = {
            caesar: (t, k, m) => { const s = parseInt(k) || 0; const shift = m === 'encrypt' ? s : -s; return t.replace(/[a-zA-Z]/g, c => { const b = c >= 'a' ? 97 : 65; return String.fromCharCode(((c.charCodeAt(0) - b + shift) % 26 + 26) % 26 + b); }); },
            atbash: (t) => { const f = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"; const r = "ZYXWVUTSRQPONMLKJIHGFEDCBA"; return t.toUpperCase().replace(/[A-Z]/g, c => f.indexOf(c) > -1 ? r[f.indexOf(c)] : c); },
            rail_fence: (t, k, m) => { const r = parseInt(k) || 3; if(r < 2) return t; const len = t.length; if(m==='encrypt') { let f = Array.from({length:r},()=>[]); let row=0, d=1; for(let c of t) { f[row].push(c); row+=d; if(row===0||row===r-1) d=-d; } return f.flat().join(''); } else { let f=Array.from({length:r},()=>new Array(len).fill(null)); let row=0, d=1; for(let i=0;i<len;i++){ f[row][i]='?'; row+=d; if(row===0||row===r-1) d=-d; } let idx=0; for(let i=0;i<r;i++) for(let j=0;j<len;j++) if(f[i][j]=='?' && idx<len) f[i][j]=t[idx++]; let res='', r2=0, d2=1; for(let i=0;i<len;i++){ if(f[r2][i]) res+=f[r2][i]; r2+=d2; if(r2===0||r2===r-1) d2=-d2; } return res; } },
            vigenere: (t, k, m) => { const key = k.toUpperCase().replace(/[^A-Z]/g,'') || 'A'; let ki = 0; return t.replace(/[a-zA-Z]/g, c => { const b = c >= 'a' ? 97 : 65; const charCode = c.toUpperCase().charCodeAt(0) - 65; const keyCode = key[ki++ % key.length].charCodeAt(0) - 65; let result = m === 'encrypt' ? (charCode + keyCode) % 26 : (charCode - keyCode + 26) % 26; return String.fromCharCode(result + b); }); },
