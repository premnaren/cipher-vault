        const updateUI = () => { const algo = DOM.algo.value; const isAsym = ['rsa', 'ecc'].includes(algo); const isPigpen = algo === 'pigpen'; if(algo === 'caesar' || algo === 'rail_fence') DOM.keyHint.innerText = "Restricted: Numbers Only"; else if(algo === 'vigenere') DOM.keyHint.innerText = "Restricted: Letters Only"; else DOM.keyHint.innerText = ""; DOM.stdKeySec.classList.toggle('hidden', isAsym || isPigpen); DOM.asymKeySec.classList.toggle('hidden', !isAsym); DOM.ppBoard.classList.toggle('hidden', !isPigpen); DOM.aesEye.classList.toggle('hidden', algo !== 'aes'); DOM.key.type = algo === 'aes' ? "password" : "text"; if(algo==='rsa') DOM.genKey.innerText = "GENERATE RSA KEY PAIR"; if(algo==='ecc') DOM.genKey.innerText = "GENERATE ECC CURVE"; if(isPigpen) { if(mode === 'encrypt') { DOM.input.classList.remove('hidden'); DOM.visInput.classList.add('hidden'); DOM.output.classList.add('hidden'); DOM.visOutput.classList.remove('hidden'); DOM.visOutput.classList.add('flex'); } else { DOM.input.classList.add('hidden'); DOM.visInput.classList.remove('hidden'); DOM.output.classList.remove('hidden'); DOM.visOutput.classList.add('hidden'); DOM.visOutput.classList.remove('flex'); } } else { DOM.input.classList.remove('hidden'); DOM.visInput.classList.add('hidden'); DOM.output.classList.remove('hidden'); DOM.visOutput.classList.add('hidden'); DOM.visOutput.classList.remove('flex'); } };
        const swapMode = () => { gsap.to(DOM.card, { rotationY: 90, duration: 0.3, onComplete: () => { mode = mode === 'encrypt' ? 'decrypt' : 'encrypt'; DOM.input.value = ''; DOM.output.value = ''; pigpenBuffer = ''; DOM.visInput.innerHTML = ''; DOM.visOutput.innerHTML = ''; DOM.pub.value = ''; DOM.priv.value = ''; DOM.modeTitle.innerText = mode === 'encrypt' ? "ENCRYPTION MODE" : "DECRYPTION MODE"; DOM.modeTitle.style.color = mode === 'encrypt' ? "var(--primary)" : "#ff2a2a"; DOM.swapBtnText.innerText = mode === 'encrypt' ? "ENCRYPT" : "DECRYPT"; DOM.processBtn.innerText = mode === 'encrypt' ? "ENCRYPT DATA" : "DECRYPT DATA"; DOM.processBtn.style.backgroundColor = mode === 'encrypt' ? "var(--primary)" : "#ff2a2a"; updateUI(); gsap.to(DOM.card, { rotationY: 0, duration: 0.4 }); }}); };
        
        DOM.genKey.onclick = () => { const algo = DOM.algo.value; DOM.genKey.innerText = "COMPUTING..."; setTimeout(() => { if(algo === 'rsa') { const c = new JSEncrypt({default_key_size: 1024}); let pub = c.getPublicKey().replace(/-----BEGIN PUBLIC KEY-----|-----END PUBLIC KEY-----|\n/g, ''); let priv = c.getPrivateKey().replace(/-----BEGIN PRIVATE KEY-----|-----END PRIVATE KEY-----|\n/g, ''); DOM.pub.value = pub; DOM.priv.value = priv; DOM.genKey.innerText = "KEYS GENERATED"; } else { DOM.pub.value = "04" + Math.random().toString(16).substr(2) + " (Curve P-256)"; DOM.priv.value = Math.random().toString(16).substr(2); DOM.genKey.innerText = "CURVE GENERATED"; } }, 200); };
        const runSlotAnimation = (finalText) => { return new Promise(resolve => { DOM.output.value = ''; const steps = 30; let i = 0; const interval = setInterval(() => { const progress = i / steps; DOM.output.value = finalText.split('').map((c, idx) => idx < finalText.length * progress ? c : "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"[Math.floor(Math.random()*36)]).join(''); i++; if(i>steps){ clearInterval(interval); DOM.output.value=finalText; resolve(); } }, 40); }); };
        
        DOM.processBtn.onclick = async () => { const algo = DOM.algo.value; const txt = DOM.input.value; if(algo === 'pigpen') { if(mode === 'encrypt') updatePigpenVisuals(txt, DOM.visOutput); else DOM.output.value = pigpenBuffer; return; } const res = Algorithms[algo](txt, DOM.key.value, mode); await runSlotAnimation(res); };
        
        // --- UPDATED COPY BUTTON LOGIC ---
