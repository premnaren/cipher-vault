        const renderPigpenSymbol = (char) => { const el = document.createElement('div'); el.className = 'pp-key'; const c = char.toUpperCase(); if("ADGJMPSVY".includes(c)) el.classList.add('pp-r'); if("CFILORUXZ".includes(c)) el.classList.add('pp-l'); if("ABCJKLSTW".includes(c)) el.classList.add('pp-b'); if("GHIPQRVYZ".includes(c)) el.classList.add('pp-t'); if("JKLMNOPQRWXYZ".includes(c)) el.classList.add('pp-dot'); return el; };
